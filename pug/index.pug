		script(type='text/javascript').
			var sections = [
				document.querySelector('.home__about'),
				document.querySelector('.home__blog')
			]

			var togglers = [
				document.querySelector('[data-toggle="about-section"]'),
				document.querySelector('[data-toggle="article-section"]')
			]

			function navigateTo(section, toggler) {
				sections.forEach(function(item) {
					item.classList.remove('is-visible');
				});
				togglers.forEach(function(item) {
					item.classList.remove('active');
				});
				section.classList.add('is-visible');
				toggler.classList.add('active');
			}

			document.querySelector('[data-toggle="about-section"]').addEventListener('click', function() {
				navigateTo(sections[0], togglers[0]);
			});

			document.querySelector('[data-toggle="article-section"]').addEventListener('click', function() {
				navigateTo(sections[1], togglers[1]);
			});

			if (location.hash == "#blog") navigateTo(sections[1], togglers[1]);
			else navigateTo(sections[0], togglers[0]);
